<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
                http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0"
         metadata-complete="true">
  <display-name>Conferences</display-name>
  <description>
      Conferences management application
  </description>

  <request-character-encoding>UTF-8</request-character-encoding>

  <!--============================================================
	     i18n support
       =============================================================-->
  <!-- this way we set the resource bundle name -->
  <context-param>
      <param-name>javax.servlet.jsp.jstl.fmt.localizationContext</param-name>
      <param-value>l10n</param-value>
  </context-param>

	<servlet>
      <servlet-name>Controller</servlet-name>
      <servlet-class>net.madand.conferences.web.Controller</servlet-class>
	</servlet>

  <!-- Serve static files -->
	<servlet-mapping>
		  <servlet-name>default</servlet-name>
		  <url-pattern>/assets/*</url-pattern>
	</servlet-mapping>

	<servlet-mapping>
		  <servlet-name>Controller</servlet-name>
		  <url-pattern>/*</url-pattern>
	</servlet-mapping>

    <listener>
        <listener-class>net.madand.conferences.web.listener.ContextListener</listener-class>
    </listener>
</web-app>
